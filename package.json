{
  "name": "react-image-pan-zoom-rotate",
  "version": "1.2.0",
  "description": "Simple wrapper for pan, zoom, rotate on react containers",
  "main": "dist/PanViewer",
  "typings": "dist/PanViewer.d.ts",
  "author": "mgorabbani",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mgorabbani/react-image-pan-zoom-rotate"
  },
  "keywords": [
    "html pan",
    "html zoom",
    "react pan zoom",
    "react pan zoom rotate"
  ],
  "scripts": {
    "start:dev": "webpack-dev-server",
    "lib:build": "webpack --config=webpack.config.lib.js",
    "test": "jest --watchAll --coverage",
    "itest": "cypress open",
    "prepublishOnly": "npm run lib:build"
  },
  "devDependencies": {
    "@types/jest": "^23.0.0",
    "@types/react": "^16.9.16",
    "@types/react-dom": "^16.9.4",
    "@types/styled-components": "^5.1.9",
    "classnames": "^2.2.5",
    "clean-webpack-plugin": "^0.1.19",
    "cypress": "^6.8.0",
    "fork-ts-checker-webpack-plugin": "^0.4.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.1.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "styled-components": "^5.2.1",
    "svg-sprite-loader": "^3.7.3",
    "ts-jest": "^26.5.4",
    "ts-loader": "^4.3.0",
    "tslint": "^5.10.0",
    "typescript": "^4.2.3",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.8.3",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.1.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ],
    "coverageReporters": [
      "html"
    ]
  }
}
